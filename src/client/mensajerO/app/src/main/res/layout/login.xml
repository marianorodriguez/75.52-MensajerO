<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back"
    android:padding="10dp">

    <EditText android:id="@+id/txtUsername"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:phoneNumber="false"
        android:hint="Username"
        android:textColor="#ffffffff"
        android:textColorHint="#bbffffff"
        android:textSize="18dp"
        android:typeface="sans"
        android:singleLine="true"
        android:background="@drawable/rounded_text"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/txtPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold|normal|italic"
        android:gravity="center_vertical|center_horizontal"
        android:autoText="false"
        android:layout_centerHorizontal="true"
        android:linksClickable="true"
        android:cursorVisible="false"/>

    <EditText android:id="@+id/txtPassword"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:singleLine="true"
        android:typeface="sans"
        android:textColor="#ffffffff"
        android:textColorHint="#bbffffff"
        android:hint="Password"
        android:textSize="18dp"
        android:textStyle="bold|normal|italic"
        android:password="true"
        android:background="@drawable/rounded_text"
        android:layout_above="@+id/backtologin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:linksClickable="true"
        android:cursorVisible="false"/>

    <Button
        android:id="@+id/backtologin"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="@string/b.logIn"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:elegantTextHeight="false"
        android:background="@drawable/rounded_button"
        android:textColor="#ffffffff"
        android:typeface="sans"
        android:layout_marginBottom="75dp"
        android:layout_above="@+id/signupbutton"
        android:layout_centerHorizontal="true"
        android:textSize="18dp" />
    <Button
        android:id="@+id/signupbutton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/b.signUp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/rounded_button"
        android:typeface="sans"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:background="@drawable/chatsback"
        android:layout_above="@+id/txtUsername"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"
        android:scaleType="fitXY" />

</RelativeLayout>