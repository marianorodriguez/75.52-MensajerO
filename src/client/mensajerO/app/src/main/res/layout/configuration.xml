<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3CAFE8">

    <Button
        android:id="@+id/backtologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/b.cancel"
        android:textAllCaps="false"
        android:layout_below="@+id/imageView7"
        android:layout_toRightOf="@+id/online"
        android:layout_toEndOf="@+id/online"
        android:background="@drawable/rounded_button"
        android:textColor="#ffffffff"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/signupbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/b.done"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/backtologin"
        android:layout_toLeftOf="@+id/online"
        android:layout_toStartOf="@+id/online"
        android:background="@drawable/rounded_button"
        android:textColor="#ffffffff"
        android:textStyle="bold" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Select your profile picture"
        android:textAllCaps="false"
        android:id="@+id/button"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        android:textColor="#ffffffff"
        android:textSize="17dp"
        android:typeface="sans"
        android:textStyle="bold" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Online"
        android:id="@+id/online"
        android:checked="true"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="-20dp"
        android:textColor="#ffffffff" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Out"
        android:id="@+id/out"
        android:checked="false"
        android:layout_below="@+id/offline"
        android:layout_alignLeft="@+id/offline"
        android:layout_alignStart="@+id/offline"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        android:textColor="#ffffffff" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offline"
        android:id="@+id/offline"
        android:checked="false"
        android:layout_below="@+id/online"
        android:layout_alignLeft="@+id/online"
        android:layout_alignStart="@+id/online"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        android:textColor="#ffffffff" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"
        android:src="@drawable/ic_launcher"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="STATUS"
        android:id="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentLeft="false"
        android:layout_marginTop="10dp"
        android:textColor="#ffffffff"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:background="#1E4072"
        android:minHeight="1dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:background="#1E4072"
        android:minHeight="1dp"
        android:layout_below="@+id/out"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <ImageView
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:id="@+id/imageView8"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_below="@+id/button"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:layout_alignBottom="@+id/imageView" />

</RelativeLayout>