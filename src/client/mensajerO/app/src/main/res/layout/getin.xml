<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <!-- Set OnClickListener to trigger results when pressed -->
        <Button
            android:id="@+id/getinbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/b.getIn"
            android:layout_marginTop="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:typeface="sans" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ipedittext"
        android:layout_centerVertical="true"
        android:hint="Enter Server&apos;s IP"
        android:layout_alignLeft="@+id/getinbutton"
        android:layout_alignStart="@+id/getinbutton"
        android:layout_alignRight="@+id/getinbutton"
        android:layout_alignEnd="@+id/getinbutton"
        android:layout_marginLeft="-50dp"
        android:layout_marginRight="-50dp"
        android:textSize="24dp"
        android:layout_marginTop="-100dp"
        android:layout_below="@+id/getinbutton"
        style="fdfbvb" />

</RelativeLayout>